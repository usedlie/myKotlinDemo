<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lie.liekotlin.KotActivity1">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn2" />

    <Button
        android:id="@+id/btn3_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn3_dialog"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn4_dialog"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn3_dialog"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn3_dialog" />

    <Button
        android:id="@+id/btn5_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn5_custom_dialog"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn4_dialog"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn4_dialog" />
</android.support.constraint.ConstraintLayout>
